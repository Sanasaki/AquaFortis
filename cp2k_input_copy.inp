&GLOBAL
    PROJECT	
    RUN_TYPE	MOLECULAR_DYNAMICS
    PRINT_LEVEL	LOW
&END GLOBAL
&EXT_RESTART
    RESTART_FILE_NAME	
&END EXT_RESTART
&MOTION
    &MOLECULAR_DYNAMICS
        ENSEMBLE	NVT
        TEMPERATURE	298.0
        STEPS	50000
        MAX_STEPS	50000
        TIMESTEP	0.5
        &THERMOSTAT
            &NOSE
                LENGTH	3
                TIMECON	100
                YOSHIDA	3
                MTS	2
            &END NOSE
        &END THERMOSTAT
    &END MOLECULAR_DYNAMICS
&END MOTION
&FORCE_EVAL
    METHOD	QS
    &DFT
        BASIS_SET_FILE_NAME	BASIS_MOLOPT
        POTENTIAL_FILE_NAME	scanXcPotential.txt
        &MGRID
            NGRIDS	5
            CUTOFF	400
        &END MGRID
        &QS
            EPS_DEFAULT	1e-12
            EXTRAPOLATION	ASPC
            EXTRAPOLATION_ORDER	2
        &END QS
        &SCF
            SCF_GUESS	ATOMIC
        &END SCF
        &XC
            &XC_FUNCTIONAL
                &MGGA_X_SCAN
                &END MGGA_X_SCAN
            &END XC_FUNCTIONAL
            &XC_GRID
                XC_SMOOTH_RHO	NN10
                XC_DERIV	SPLINE2_SMOOTH
            &END XC_GRID
        &END XC
    &END DFT
    &SUBSYS
        &CELL
            ABC	10.0	15	10
        &END CELL
        &COORD
            N	12.0	15	10
        &END COORD
        &KIND H
            BASIS_SET	DZVP-MOLOPT-SR-GTH
            POTENTIAL	GTH-SCAN-q1
        &END KIND H
        &KIND N
            BASIS_SET	DZVP-MOLOPT-SR-GTH
            POTENTIAL	GTH-SCAN-q5
        &END KIND N
        &KIND O
            BASIS_SET	DZVP-MOLOPT-SR-GTH
            POTENTIAL	GTH-SCAN-q6
        &END KIND O
    &END SUBSYS
&END FORCE_EVAL
